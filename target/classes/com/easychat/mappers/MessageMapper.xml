		<if
			test="query.sessionIdFuzzy != null and query.sessionIdFuzzy != ''">
			and session_id like concat('%', #{query.sessionIdFuzzy}, '%')
		</if>
		<if
			test="query.messageContentFuzzy != null and query.messageContentFuzzy != ''">
			and message_content like concat('%',
			#{query.messageContentFuzzy}, '%')
		</if>
		<if
			test="query.sendUserIdFuzzy != null and query.sendUserIdFuzzy != ''">
