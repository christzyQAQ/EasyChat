			<if test="bean.fileType != null">
				file_type = #{bean.fileType},
			</if>
			<if test="bean.status != null">
				status = #{bean.status},
			</if>
		</set>
		where send_time=#{sendTime}
	</update>

	<!--根据SendTime删除 -->
	<delete id="deleteBySendTime">
		delete from chat_message where send_time=#{sendTime}
	</delete>

</mapper>