		<!-- 额外添加的查询条件 -->		
		<if test="query.lastReciveTime != null">
			and send_time >= #{query.lastReciveTime}
		</if>
		<if
			test="query.contactIdList != null and query.contactIdList.size() > 0">
			and contact_id in(
			<foreach collection="query.contactIdList" separator=","
				item="item">
				#{item}
			</foreach>)
		</if>

	</sql>

